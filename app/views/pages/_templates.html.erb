<script type="template/javascript" id="content-table_template">
  <table class="compare-table">
    <thead>
      <tr class="content-row">
        <th class="dragtable-drag-boundary dragtable-col-disabled">
          <form id="load-cars" class="header-content">
            <div class="form-row">
              <label> 
                New
                <input type="radio" name="state" value="new" checked="checked">
              </label>
              <label> 
                Used
                <input type="radio" name="state" value="used">
              </label>
            </div>
            <div class="form-row">
              <label> 
                Make
                <select id="make" class="select2"></select>
              </label>
            </div>
            <div class="form-row">
              <label>
                Model
                <select id="model" class="select2"></select>
              </label>
            </div>
            <div class="form-row">
              <button disabled='disabled' class='btn btn-danger' id='clear-button'>
                clear all
              </button>
              <button class="btn btn-success">
                add
              </button>
            </div>
          </form>
        </th>
      </tr>
    </thead>
    <tbody>
      <%% _.each(tableRows, function(category, i){ %>
        <tr class="content-title content-row cat-<%%= i %>" data-cat="<%%= i %>">
          <td class="row-title"><%%= category.name %></td>
        </tr>
        <%% _.each(category.content, function(row, n){ %>
          <%% if (typeof(row) == "object") { %>
            <tr class="content-subtitle content-row cat-<%%= i %> subcat-<%%= i %>-<%%= n %>" data-cat="<%%= i %>" data-subcat="<%%= n %>">
              <td class="row-title"><%%= row.name %></td>
            </tr>
            <%% _.each(row.content, function(row){ %>
              <tr class="content-item content-row cat-<%%= i %> sub-item subcat-<%%= i %>-<%%= n %>">
                <td class="row-title"><%%= row %></td>
              </tr>
            <%% }); %>
          <%% } else { %>
            <tr class="content-item content-row cat-<%%= i %>">
              <td class="row-title"><%%= row %></td>
            </tr>
          <%% } %>
        <%% }); %>
      <%% }); %>
    </tbody>
  </table>
</script>
<script type="template/javascript" id="make-select_template">
  <option value="">
    Choose a make...
  </option>
  <%% _.each(makes, function(make){ %>
    <option value="<%%= make.makeName %>">
      <%%= make.makeName %>
    </option>
  <%% }); %>
</script>
<script type="template/javascript" id="model-select_template">
  <option value="">Choose a model...</option>
  <%% _.each(models, function(model){ %>
    <%% _.each(model.modelYears, function(year){ %>
      <option value="<%%= year.modelPath %>">
        <%%= year.modelYearName %>
        ,&nbsp;
        <%%= year.modelYear %>
      </option>
    <%% }); %>
  <%% }); %>
</script>
